<%= form_for @industrye, url: url, method: meth do |f| %>

	<div class="control-group optional form-group field ui form" style="margin-top: 10px" >
	  <%= f.label :industry, 'Industry', class: 'password optional control-label' %>
	  <div class="controls">
	    <%= f.text_field :industry, class: 'form-control input-sm', style: 'width: 280px;' %>
	  </div>
    </div>

    <div class="control-group optional form-group field ui form" style="margin-top: 10px" >
	  <%= f.label :parent_id, 'Parent_id', class: 'password optional control-label' %>
	  <div class="controls">
	    <%= f.text_field :parent_id, class: 'form-control input-sm', style: 'width: 280px;' %>
	  </div>
    </div>

    <div class="row-fluid">
	<a href="javascript:history.back();"><div class="ui button cancel">返回</div></a>
    <%= f.submit :class=>"ui primary button"%>
  	</div>

<% end %>