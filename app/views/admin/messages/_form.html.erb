<%= form_for @message, url: url, method: meth do |f| %>
	
    <div class="control-group optional form-group field ui form" style="margin-top: 10px" >
	  <%= f.label :title, '标题', class: 'password optional control-label' %>
	  <div class="controls">
	    <%= f.text_field :title, class: 'form-control input-sm', style: 'width: 280px;' %>
	  </div>
    </div>
    <div class="control-group optional form-group field ui form" style="margin-top: 10px" >
	  <%= f.label :company_id, '公司', class: 'password optional control-label' %>
	  <div class="controls">
	    <%= f.text_field :company_id, class: 'form-control input-sm', style: 'width: 280px;' %>
	  </div>
    </div>
    <div class="control-group optional form-group field ui form" style="margin-top: 10px" >
	  <%= f.label :industryes_id, '信息类型', class: 'password optional control-label' %>
	  <div class="controls">
	    <%= f.text_field :industryes_id, class: 'form-control input-sm', style: 'width: 280px;' %>
	  </div>
    </div>
    <div class="control-group optional form-group field ui form" style="margin-top: 10px" >
	  <%= f.label :information, '信息内容', class: 'password optional control-label' %>
	  <div class="controls">
	    <%= f.text_field :information, class: 'form-control input-sm', style: 'width: 280px;' %>
	  </div>
    </div>
    <div class="control-group optional form-group field ui form" style="margin-top: 10px" >
	  <%= f.label :contacts_id, '联系人', class: 'password optional control-label' %>
	  <div class="controls">
	    <%= f.text_field :contacts_id, class: 'form-control input-sm', style: 'width: 280px;' %>
	  </div>
    </div>
    <div class="row-fluid">
		<a href="javascript:history.back();"><div class="ui button cancel">返回</div></a>
   		<%= f.submit :class=>"ui primary button"%>
  	</div>

<% end %>